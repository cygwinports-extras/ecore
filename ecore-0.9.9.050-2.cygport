SRC_URI="http://download.enlightenment.org/snapshots/2008-09-25/${P}.tar.bz2"
PATCH_URI="0.9.9-no-undefined.patch"

PKG_NAMES="${PN} libecore0 libecore-devel"
ecore_CONTENTS="usr/bin/*.exe usr/share/doc/"
